<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/app_theme_color"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:padding="6dp">

    <ImageButton
        android:id="@+id/btn_left"
        android:layout_width="@dimen/top_bar_btn_height"
        android:layout_height="@dimen/top_bar_btn_width"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_search_user_avatar"
        android:scaleType="fitXY"
        android:layout_marginRight="8dp"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/btn_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/top_bar_btn_width"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_search_input"
        android:hint="搜索"
        android:textSize="14sp"
        android:textColor="@color/white_alpha_10"
        android:textColorHint="@color/white_alpha_5"
        android:textCursorDrawable="@null"
        android:drawableLeft="@drawable/ic_search"
        android:layout_toRightOf="@id/btn_left"
        android:layout_toLeftOf="@id/btn_right"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:text="维护权益"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btn_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@id/et_search"
        android:background="@color/transparent"
        android:src="@drawable/btn_search_cancel"
        android:scaleType="fitXY"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        />

</RelativeLayout>