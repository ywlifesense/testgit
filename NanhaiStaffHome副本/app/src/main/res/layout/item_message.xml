<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="8dp">

    <cn.js.nanhaistaffhome.views.others.RoundImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_user_avatar_default"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="南海总工会"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@id/iv_user_avatar"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_second"
        android:text="关于劳动合同内容的系列问答"
        android:layout_toRightOf="@id/iv_user_avatar"
        android:layout_alignBottom="@id/iv_user_avatar"
        android:textSize="13sp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_second"
        android:text="2015-0702"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_user_name"
        />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_alpha_10"
        android:text="未读"
        android:textSize="10sp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_content"
        android:background="@drawable/bg_message_toast"
        android:layout_marginBottom="1dp"
        />

</RelativeLayout>