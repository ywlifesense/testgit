<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/content_bg">

    <RelativeLayout
        android:id="@+id/activity_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        >

        <TextView
            android:id="@+id/tv_act_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="获取中..."
            android:layout_marginLeft="36dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="32dp"
            />

        <TextView
            android:id="@+id/tv_act_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            android:layout_marginLeft="36dp"
            android:layout_below="@id/tv_act_title"
            />

        <TextView
            android:id="@+id/tv_act_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            android:layout_marginLeft="36dp"
            android:layout_below="@id/tv_act_address"
            android:layout_marginBottom="5dp"
            />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_activity_new"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_new"
        android:layout_marginTop="6dp"
        />

    <LinearLayout
        android:id="@+id/menu_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/activity_frame"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/btn_sqxx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_community"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社区信息"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#0e70e9"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:background="#d4d4d4"
                />

            <LinearLayout
                android:id="@+id/btn_whqy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_whqy"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维护权益"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#ff4800"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:background="#d4d4d4"
                />

            <LinearLayout
                android:id="@+id/btn_fwcs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick"
                >

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_service"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务超市"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#ff9f00"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="#d4d4d4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/btn_hdzx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_activity"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动中心"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#009944"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#d4d4d4"
                />

            <LinearLayout
                android:id="@+id/btn_zhzx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_zhzx"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合咨询"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#01a4d5"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="3dp"
                android:background="#d4d4d4"
                />

            <LinearLayout
                android:id="@+id/btn_persion_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="@dimen/header_btn_image_size"
                    android:layout_height="@dimen/header_btn_image_size"
                    android:src="@drawable/header_persion_info"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:textSize="@dimen/header_btn_text_size"
                    android:textColor="#9a44fc"
                    android:layout_marginTop="@dimen/header_img_btn_space"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/zxwq_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/menu_frame"
        android:background="@color/white"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_zxwq_icon"
            android:layout_width="114dp"
            android:layout_height="97dp"
            android:src="@drawable/header_zxwq_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_zxwq_icon"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/btn_flfg"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/header_zxwq_item_padding"
                    android:background="@drawable/bg_header_zxwq_item"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法律法规"
                        android:textColor="#ff4800"/>

                    <ImageView
                        android:layout_width="@dimen/header_zxwq_item_image_size"
                        android:layout_height="@dimen/header_zxwq_item_image_size"
                        android:src="@drawable/header_zxwq_flfg"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_flcs"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/header_zxwq_item_padding"
                    android:background="@drawable/bg_header_zxwq_item"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法律常识"
                        android:textColor="#ff4800"/>

                    <ImageView
                        android:layout_width="@dimen/header_zxwq_item_image_size"
                        android:layout_height="@dimen/header_zxwq_item_image_size"
                        android:src="@drawable/header_zxwq_flcs"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/btn_flws"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/header_zxwq_item_padding"
                    android:background="@drawable/bg_header_zxwq_item"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法律文书"
                        android:textColor="#ff4800"/>

                    <ImageView
                        android:layout_width="@dimen/header_zxwq_item_image_size"
                        android:layout_height="@dimen/header_zxwq_item_image_size"
                        android:src="@drawable/header_zxwq_flws"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_flzx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:padding="@dimen/header_zxwq_item_padding"
                    android:background="@drawable/bg_header_zxwq_item"
                    android:onClick="onClick">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="常见问题"
                        android:textColor="#ff4800"/>

                    <ImageView
                        android:layout_width="@dimen/header_zxwq_item_image_size"
                        android:layout_height="@dimen/header_zxwq_item_image_size"
                        android:src="@drawable/header_zxwq_flzx"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>