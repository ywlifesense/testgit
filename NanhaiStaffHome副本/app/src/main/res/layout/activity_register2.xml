<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/app_theme_color"
        android:paddingBottom="@dimen/top_bar_padding"
        android:paddingTop="@dimen/top_bar_padding">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/top_bar_btn_width"
            android:layout_height="@dimen/top_bar_btn_height"
            android:background="@color/transparent"
            android:contentDescription="@string/app_name"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会员注册"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/user_info_item_space"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_color_fouth" />

            <TextView
                android:id="@+id/tv_tle_email"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="用户名："
                android:textColor="@color/text_color"
                android:textSize="@dimen/user_info_text_size" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tle_email"
                android:background="@color/transparent"
                android:hint="填写"
                android:minWidth="200dp"
                android:textColor="@color/text_color_second"
                android:textSize="@dimen/user_info_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_fouth" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/user_info_item_space"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_color_fouth" />

            <TextView
                android:id="@+id/tv_tle_introduce2"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="邮箱："
                android:textColor="@color/text_color"
                android:textSize="@dimen/user_info_text_size" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tle_introduce2"
                android:background="@color/transparent"
                android:hint="填写"
                android:minWidth="200dp"
                android:textColor="@color/text_color_second"
                android:textSize="@dimen/user_info_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_fouth" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/user_info_item_space"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_color_fouth" />

            <TextView
                android:id="@+id/tv_tle_introduce"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="手机电话："
                android:textColor="@color/text_color"
                android:textSize="@dimen/user_info_text_size" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tle_introduce"
                android:background="@color/transparent"
                android:hint="填写"
                android:minWidth="200dp"
                android:textColor="@color/text_color_second"
                android:textSize="@dimen/user_info_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_fouth" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/user_info_item_space"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_color_fouth" />

            <TextView
                android:id="@+id/tv_tle_birth"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="密码："
                android:textColor="@color/text_color"
                android:textSize="@dimen/user_info_text_size" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tle_birth"
                android:background="@color/transparent"
                android:editable="false"
                android:hint="填写"
                android:inputType="textPassword"
                android:minWidth="200dp"
                android:textColor="@color/text_color_second"
                android:textSize="@dimen/user_info_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_fouth" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/user_info_item_space"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text_color_fouth" />

            <TextView
                android:id="@+id/tv_tle_birth2"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="确认密码："
                android:textColor="@color/text_color"
                android:textSize="@dimen/user_info_text_size" />

            <EditText
                android:id="@+id/et_check_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_tle_birth2"
                android:background="@color/transparent"
                android:editable="false"
                android:hint="填写"
                android:inputType="textPassword"
                android:minWidth="200dp"
                android:textColor="@color/text_color_second"
                android:textSize="@dimen/user_info_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/text_color_fouth" />

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_register"
        android:onClick="onClick"
        android:text="注     册"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>