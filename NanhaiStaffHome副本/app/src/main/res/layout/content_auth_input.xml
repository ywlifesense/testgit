<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/content_auth_input"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/bg_register_frame">

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="真实名称"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/content_bg"
            />

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="身份证号"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:inputType="number"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/content_bg"
            />

        <TextView
            android:id="@+id/btn_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="所属企业"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableRight="@drawable/arrow_down"
            android:gravity="left|center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/content_bg"
            />

        <TextView
            android:id="@+id/btn_zzmm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="政治面貌"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableRight="@drawable/arrow_down"
            android:gravity="left|center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/content_bg"
            />

        <TextView
            android:id="@+id/btn_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="学历"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:inputType="number"
            android:textSize="16sp"
            android:drawableRight="@drawable/arrow_down"
            android:gravity="left|center_vertical"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/content_bg"
            />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:minHeight="@dimen/register_input_min_height"
            android:hint="电话"
            android:padding="8dp"
            android:textColorHint="@color/text_color_second"
            android:textColor="@color/text_color"
            android:inputType="number"
            android:textSize="16sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="认     证"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_register"
        />

</LinearLayout>